@{
}
@model IEnumerable<StudentPortal.web.Models.Entities.Student>

<h1 class="page-title">All Students</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td><a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="edit-link">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: black; /* Black background */
        font-family: Arial, sans-serif;
        color: #f0f8ff; /* Light text color for readability */
    }

    .page-title {
        text-align: center;
        color: #00aaff; /* Light blue title */
        margin-bottom: 20px;
    }

    .table {
        width: 95%;
        margin: 20px auto;
        background-color: #5aa2ff; /* Dark gray table background */
        border: 1px solid #3a85d0; /* Light blue outer border */
        border-radius: 8px;
        overflow: hidden;
        border-collapse: collapse; /* Remove gaps between borders */
    }

    .table th,
    .table td {
        padding: 10px;
        border: 1px solid #3492ff; /* Blue inner border for all cells */
        text-align: left;
    }

    .table th {
        background-color: #0c5baa; /* Deep blue header background */
        color:  #80bdfa; /* White text for headers */
    }

    .table td {
        background-color: #1a1a1a; /* Darker gray for cell background */
        color: #ffffff; /* White text for better readability */
    }

    .table-striped tbody tr:nth-child(odd) td {
        background-color: #1e1e1e; /* Slightly darker gray for odd rows */
    }

    .table-striped tbody tr:nth-child(even) td {
        background-color: #2a2a2a; /* Slightly lighter gray for even rows */
    }

    .edit-link {
        color: #00bfff; /* Light blue links */
        text-decoration: none;
    }

    .edit-link:hover {
        text-decoration: underline;
        color: #66d9ff; /* Slightly lighter blue on hover */
    }
</style>
