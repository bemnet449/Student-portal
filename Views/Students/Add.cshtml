@{
}
@model StudentPortal.web.Models.AddStudentsViewModel

<h1 class="form-title">Add Student</h1>

<div class="form-container">
    <form method="post">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-input" id="Name">

        <label for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-input" id="Email">

        <label for="Phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-input" id="Phone">

        <div class="checkbox-container">
            <input type="checkbox" asp-for="Subscribed" id="Subscribed">
            <label for="Subscribed">Subscribed</label>
        </div>

        <button type="submit" class="submit-button">Save</button>
    </form>
</div>

<style>
    body {
        background-color: black; /* Black background */
        font-family: Arial, sans-serif;
        color: #f0f8ff; /* Light text color for readability */
    }

    .form-title {
        text-align: center;
        color: #00aaff; /* Light blue title */
        margin-bottom: 20px;
    }

    .form-container {
        width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #121212; /* Dark gray background */
        border: 1px solid #3a85d0; /* Light blue border */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        color: #ffffff; /* White label text */
        margin-bottom: 5px;
    }

    .form-input {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #3492ff; /* Blue border for inputs */
        border-radius: 4px;
        background-color: #1a1a1a; /* Darker gray background for inputs */
        color: #ffffff; /* White input text */
    }

    .form-input:focus {
        outline: none;
        border-color: #66d9ff; /* Lighter blue focus border */
    }

    .checkbox-container {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .checkbox-container label {
        margin-left: 5px;
        color: #ffffff; /* White label text for checkbox */
    }

    .submit-button {
        padding: 10px;
        background-color: #00509e; /* Deep blue button background */
        color: #ffffff; /* White button text */
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        text-transform: uppercase;
    }

    .submit-button:hover {
        background-color: #007bff; /* Lighter blue on hover */
    }
</style>
