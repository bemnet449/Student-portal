<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal.web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentPortal.web.styles.css" asp-append-version="true" />
    <style>
        /* Navbar styling */
        .navbar {
            background-color: #2270ca; /* Dark blue background */
            border-bottom: 1px solid #3a85d0; /* Light blue border for bottom */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        .navbar-brand {
            color: #00aaff; /* Light blue for brand */
            font-weight: bold; /* Make the brand name bold */
            font-size: 1.8rem; /* Larger font size for the brand */
            padding-right: 50px; /* Add space between brand and links */
        }

        .navbar-brand:hover {
            color: #66d9ff; /* Slightly lighter blue on hover */
            text-decoration: none;
        }

        .navbar-nav .nav-item {
            margin-left: 20px; /* Add space between nav links */
        }

        .nav-link {
            color: #e0e0e0; /* Light gray color for text */
            font-size: 1.1rem; /* Slightly larger font size */
            padding: 10px; /* Padding for better spacing */
        }

        /* Footer styling */
        .footer {
           border-top: 1px solid white;
            color: white; /* White text color */
            text-align: center; /* Center-align the footer content */
            padding: 0px 0; /* Add some vertical padding */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudentPortal.web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Add">Add Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="List">All Students</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - StudentPortal.web
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
